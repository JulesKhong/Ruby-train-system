<div class="row">
  <div class="col-md-3 col-md-offset-1">
    <h3>See the Train Routes</h3>

    <% if @trains.any?() %>
      <h3>Trains:</h3>
      <ul>
        <% @trains.each() do |train| %>
          <li><a href="/train_stops/<%= train.id()%>"> <%= train.name() %></a></li>
        <% end %>
      </ul>

    <% else %>
      <p>
        There are no trains yet!
      </p>
    <% end %>
    <hr>
</div>

  <div class="col-md-3 col-md-offset-2">
    <h3>Find Trains by City</h3>

    <% if @cities.any?() %>
    <ul>
      <% @cities.each() do |city| %>
        <li><a href="/city_stops/<%= city.id()%>"><%= city.name()%></a></li>
      <% end %>
    </ul>

    <% else %>
    <p>
      There are no cities added.
    </p>
    <% end %>

  </div>
</div>
